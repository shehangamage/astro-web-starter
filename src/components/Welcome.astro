---
import astroLogo from '../assets/astro.svg';
import * as m from '../paraglide/messages.js';
import LanguageChooser from './LanguageChooser.astro';
---

<div class="flex flex-col items-center justify-center mt-8">
  <div class="container text-center p-8 bg-blue-200 bg-opacity-75 rounded-lg shadow-lg">
    <div class="flex flex-col items-center">
      <img src={astroLogo.src} alt="Astro Logo" class="w-36 mt-4" />
      <h2 class="text-2xl font-bold mb-4">{m.greeting({ name: 'Astro' })}</h2>
      <p class="text-base mb-4">{m.description}</p>
      <LanguageChooser id="language-chooser" />
    </div>
  </div>
</div>
